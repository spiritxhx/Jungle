<section class="admin-products-index">
  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn
    btn-info' %>
  </div>

  <div class="panel panel-default products">
    <table class="table table-bordered">
      <thead>
        <tr class="row">
          <th class="col-sm-3">Category</th>

          <th class="col-sm-9"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</section>
