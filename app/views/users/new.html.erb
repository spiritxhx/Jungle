<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <!-- <p>Name: <%= f.text_field :name %></p> -->
  <div class="form-group">
    <label>Name:</label>
    <input name="user[name]" id="user_name" class="form-control" />

  </div>
  <div class="form-group">
    <label>Email:</label>
    <input name="user[eamil]" id="user_email" class="form-control" />

  </div>
  <!-- <p>Email: <%= f.text_field :email %></p> -->
  <!-- <p>Password: <%= f.password_field :password %></p> -->
  <div class="form-group">
    <label>Name:</label>
    <input type="password" name="user[password]" id="user_password" class="form-control" />

  </div>
  <!-- <p>Password Confirmation: <%= f.password_field :password_confirmation %></p> -->
  <div class="form-group">
    <label>Password Confirmation:</label>
    <input type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" />

  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <!-- <%= f.submit "Submit" %> -->

<% end %>